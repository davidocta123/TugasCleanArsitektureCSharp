@model WebAppCleanArch.Domain.Entities.Course

@{
    ViewData["Title"] = "Hapus Mata Kuliah";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Apakah Anda yakin ingin menghapus mata kuliah ini?</h5>

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CourseName)</dt>
            <dd class="col-sm-9">@Model.CourseName</dd>

            <dt class="col-sm-3">Student</dt>
            <dd class="col-sm-9">@Model.Student?.Name</dd>

            <dt class="col-sm-3">ID Student</dt>
            <dd class="col-sm-9">@Model.StudentId</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Hapus</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>