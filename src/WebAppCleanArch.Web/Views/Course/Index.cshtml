@model IEnumerable<WebAppCleanArch.Domain.Entities.Course>

@{
    ViewData["Title"] = "Daftar Mata Kuliah";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tambah Mata Kuliah</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().CourseName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Student.Name)</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Student?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Hapus</a>
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-info">Detail</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Belum ada data mata kuliah</td>
            </tr>
        }
    </tbody>
</table>